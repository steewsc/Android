<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.steewsc.testing.MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/header"
        android:weightSum="12">
        <Button
            android:id="@+id/btn_insert_emps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="InEmp"
            />
        <Button
            android:id="@+id/btn_insert_shifts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="InShft"
            />
        <Button
            android:id="@+id/btn_load_emps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="LdEmp"
            />
        <Button
            android:id="@+id/btn_load_shifts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="LdShft"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="4"
        android:layout_below="@+id/header"
        android:layout_alignParentBottom="true">
            <ListView
                android:id="@+id/lst_employees"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">
                </ListView>
            <ListView
                android:id="@+id/lst_shifts"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">
            </ListView>
    </LinearLayout>
</RelativeLayout>
